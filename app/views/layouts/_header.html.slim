          .arrow
          - for page in @about_pages
            li= link_to page.title, page_path(page)
      li
        = link_to("Pedagogia para a Vida", "#", :class => "menu1")
        - if @pedagogy_pages
          ul.submenu
            .arrow
            - for page in @pedagogy_pages
              li= link_to page.title, page_path(page)
      li
        = link_to("Portal das famÃ­lias", "#{parent_signed_in? ? activities_path : new_parent_session_path}", :class => "menu1")
